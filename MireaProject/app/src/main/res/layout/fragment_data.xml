<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Киберспорт"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="#FFA500" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/cybersport"
        android:scaleType="centerCrop"
        android:contentDescription="Image representing esports"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Киберспорт — это соревновательная игровая деятельность, признанная как спорт. Участники соревнуются между собой в компьютерных играх в различных жанрах, таких как стратегии, шутеры, файтинги и др."
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Основные игры в киберспорте:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="#FFA500" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Counter-Strike 2"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#FFA500" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Dota 2"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#FFA500" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. League of Legends"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#FFA500" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Fortnite"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#FFA500" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Valorant"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#FFA500" />

    </LinearLayout>

</LinearLayout>
